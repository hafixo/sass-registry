<% @title = "Radiant CMS Extensions" %>
<% @h1 = (controller.action_name == 'index') ? "Extensions" : "All Extensions" %>
<% @selected = :extensions %>

<% content_for :actions do %>
  <%= link_to "Add Extension", new_extension_path, :class => "button" %>
<% end %>

<div class="view_order">
  Sort by:
  <%= view_orders @order %>
</div>
  
<div class="records_count">
  <%= record_count_for @extensions, Extension %>
</div>

<%= pagination_for @extensions %>

<table id="extensions" class="index" style="clear: both">
  <tbody>
    <%= render partial: "extension", collection: @extensions %>
  </tbody>
</table>

<%= pagination_for @extensions %>
