<%- @title = "Sass Extension Registry Sign Up" %>
<%- @h1 = "Create account" %>
<%- @selected = :signup %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p>
    <%= f.label :name %>
    <%= f.text_field 'name', class: 'textbox', size: 42, autofocus: true %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.email_field 'email', class: 'textbox', size: 42 %>
  </p>
  <div class="set">
    <p>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'textbox', size: 18 %>
    </p>
    <p>
      <%= f.label :password_confirmation, "Type password again" %>
      <%= f.password_field :password_confirmation, class: 'textbox', size: 18 %>
    </p>
  </div>
  <p class="buttons">
    <button type="submit">Sign up</button>
  </p>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%= link_to "Use info from GitHub", omniauth_authorize_path(resource_name, 'github') %>
<% end -%>
