<tr>
  <td class="avatar">
    <%= image_tag gravatar_url(author.email), :width=>80, :height=>80, :alt=>"" %>
  </td>
  <td class="info">
    <div class="name">
      <%= link_to_author author %>
      <% unless defined? hide_edit && hide_edit %>
        <%= link_to "Edit", edit_author_path(author), :class=>"button" if can_edit?(author) %>
      <% end %>
    </div>
    <div class="location">
      <%= author.location %>
    </div>
  </td>
  <td class="extensions_count"><%= pluralize(author.extensions_count, "extension") %></td>
  <td class="available_for_hire"><% if author.available_for_hire? %><span class="badge">Available for Hire</span><% end %></td>
</tr>
