<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="site">

    <div class="pop-stripe"></div>

    <div class="account-ctn">
      <div class="account_links">
        <% if user_signed_in? %>
          Welcome back <%= link_to current_user, edit_user_path(current_user), :class => (@selected == :profile ? "here" : nil) %>!
          &nbsp;
          <%= link_to "Logout", logout_path, method: 'delete' %>
        <% else %>
          <%= link_to "Signup", signup_path, :class => ("here" if @selected == :signup) %>
          or
          <%= link_to "Login", login_path, :class => ("here" if @selected == :login) %>
        <% end %>
      </div>
    </div>

    <header class="banner" role="banner">
      <div class="container">
        <h1 class="site-brand"><%=link_to(image_tag("logo.png", :height => "96", :alt => "Sass"), root_path) %></h1>
        <nav class="navigation collapse" role="navigation">
          <ul>
            <li id="extensions_link" class="<%= "here" if @selected == :extensions %> "><%= link_to "Extensions", extensions_path %></li>
            <li id="authors_link" class="<%= "here" if @selected == :authors %> "><%= link_to "Authors", authors_path %></li>
            <li id="search_link" class="<%= "here" if @selected == :search %> "><%= link_to "Search", search_path %></li>
            <li><%= link_to "sass-lang.com â†’", "http://sass-lang.com", :class=>"button small" %></li>
          </ul>
        </nav>
        <div class="banner-toggle">
          <!-- <button data-target='.navigation' data-toggle='collapse' type='button'> -->
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </div>
      </div>
    </header>

    <% if content_for? :pageheader %>
      <div class='page-header'>
        <div class='container'>
          <%= yield :pageheader %>
        </div>
      </div>
    <% end %>

    <% if content_for? :search %>
       <div class="search-bar">
          <%= yield :search %>
      </div>
    <% end %>

      <div class='body'>
        <div class='container'>
          <div class='content'>
            <main class='main' role='main'>
              <% if content_for? :hero %>
                <div class="heading">
                  <%= yield :hero %>
                </div>
              <% end %>
              <div id="content">
                <% flash.keys.each do |key| %>
                  <p id="<%= key %>"><%= flash[key] %>
                <% end %>
                <% if content_for? :actions %>
                  <div id="actions">
                    <%= yield :actions %>
                  </div>
                <% end %>
                <%= yield %>
              </div>
             </main>
          </div>
        </div>
      </div>
    
    <div class="push"></div>

  </div> <!-- .site -->

